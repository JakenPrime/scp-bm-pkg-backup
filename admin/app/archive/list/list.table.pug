extends /resources/angle/pug/table-checkable

block headings
    th.sortable(ng-if="table.showSource")
        span(translate="pkg.backup.admin.archive.heading.SOURCE")
        sort(col="source_id")
    th.sortable(ng-if="table.showDestination")
        span(translate="pkg.backup.admin.archive.heading.DESTINATION")
        sort(col="destination_id")
    th.sortable(ng-if="table.showRecurring")
        span(translate="pkg.backup.admin.archive.heading.RECURRING")
        sort(col="recurring_id")
    th.sortable(ng-if="table.showStatus")
        span(translate="pkg.backup.admin.archive.heading.STATUS")
        sort(col="status")
    th.sortable(ng-if="table.showCreatedAt")
        span(translate="pkg.backup.admin.archive.heading.CREATED_AT")
        sort(col="created_at")
        th.sortable(ng-if="table.showUpdatedAt")
            span(translate="pkg.backup.admin.archive.heading.UPDATED_AT")
            sort(col="updated_at")

block columns
    td(
    ng-if="table.showSource"
    ng-bind="row.source"
    )
    td(
    ng-if="table.showDestination"
    ng-bind="row.destination"
    )
    td(
    ng-if="table.showRecurring"
    )
        a(
        ui-sref="app.pkg.backup.recurring.view({id: row.recurring_id})"
        ng-bind="row.recurring"
        )
    td(
    ng-if="table.showStatus"
    ng-bind="row.status"
    )
    td(
    ng-if="table.showCreatedAt"
    date="row.created_at"
    )
    td(
    ng-if="table.showUpdatedAt"
    date="row.updated_at"
    )
